<h2>Crie Sua Conta </h2>
<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="name">Nome: </label>
                <input type="text" name="nome" class="form-control" required>
            <label for="email">Email: </label>
                <input type="email" name="email" class="form-control" required>
            <label for="senha">Senha: </label>
                <input type="password" name="senha" class="form-control" required>
            <label for="senha2">Repita a sua senha: </label>
                <input type="password" name="senha2" class="form-control" required>
            <br>
            <div class="form-check form-switch">
                <label class="form-check-label" for="switch">Acesso como admin</label>
                    <input class="form-check-input" type="checkbox" role="switch" name="eAdmin" value="1">
            </div>
            <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
        </form>
    </div>
</div>