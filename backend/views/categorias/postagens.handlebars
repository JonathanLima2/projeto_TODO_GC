<h3>Postagens da categoria: {{categoria.nome}}</h3>
<br>
{{#each postagens}}
<div class = "p-5 mb-4 bg-light rounded-3">
    <div class ="container-fluid py-5">   
        <h4>{{titulo}}</h4>
        <br>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-primary btn-lg mt-2" type="button">Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>{{data}}</small>
    </div>
</div>
{{else}}
{{/each}}